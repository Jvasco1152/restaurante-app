generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MenuItem {
  id          String   @id @default(uuid())
  nombre      String
  descripcion String
  precio      Float
  categoria   Categoria
  imagen      String?
  disponible  Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("menu_items")
}

model Reserva {
  id        String        @id @default(uuid())
  nombre    String
  email     String
  telefono  String
  fecha     DateTime
  hora      String
  personas  Int
  notas     String?
  estado    EstadoReserva @default(PENDIENTE)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@map("reservas")
}

enum Categoria {
  ENTRADA
  PRINCIPAL
  POSTRE
  BEBIDA
}

enum EstadoReserva {
  PENDIENTE
  CONFIRMADA
  CANCELADA
}
