  },
  "dependencies": {
    "@prisma/client": "^6.19.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "nodemon": "^3.0.2",
    "prisma": "^6.19.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "wait-on": "^9.0.3"
  }
}
