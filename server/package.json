{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend API para sistema de restaurante",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "npx prisma generate && tsc",
    "start": "node dist/index.js",
